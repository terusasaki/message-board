<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-default">年齢:<%= message.age %></span>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
     (<%= link_to "edit" , edit_message_path(message) %>
         <%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
        )
      <br>
    <% end %>
  </div>
</div>


<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
<% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <label for="message_age" class="control-label col-md-1">年齢:</label>
    <div class="col-md-3">
      <%= f.number_field :age, :class => "form-control" %>
    </div>
    <label for="message_name" class="control-label col-md-1">名前:</label>
    <div class="col-md-3">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
   <label for="message_body" class="control-label col-md-1">内容:</label>
   <div class="col-md-3">
      <%= f.text_area :body,:class=>"form-control" %>
    </div>
  </div>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>

